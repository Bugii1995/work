<script src="../js/imagesloaded.pkgd.min.js"></script>
<script src="../js/masonry.pkgd.min.js"></script>
<script>
    // 상품_mansory
    var $grid = $('.filter-item').masonry({
        itemSelector: '.grid_item',
        horizontalOrder: false,
        gutter: '.gt_size',
        columnWidth: '.grid_size'
    });

    //이미지가 모두 로딩후 스크립트 로드시키기
    $grid.imagesLoaded().progress(function () {
        $grid.masonry('layout');
    });

    var sortBtn = document.querySelector('.filter-menu').children;
    var sortItem = document.querySelector('.filter-item').children;

    for (var i = 0; i < sortBtn.length; i++) {
        sortBtn[i].addEventListener('click', function () {
            for (var j = 0; j < sortBtn.length; j++) {
                sortBtn[j].classList.remove('current');
            }

            this.classList.add('current');

            var targetData = this.getAttribute('data-target');

            for (var k = 0; k < sortItem.length; k++) {
                sortItem[k].classList.remove('active');
                sortItem[k].classList.add('delete');

                if (sortItem[k].getAttribute('data-item') == targetData || targetData == "all") {
                    sortItem[k].classList.remove('delete');
                    sortItem[k].classList.add('active');
                }
            }
            //$(".prd_list ul li").removeAttr('style');
            setTimeout(function () {
                $grid.masonry();
            }, 300)

        });
    }

</script>
<script src="../js/publish.js"></script>
<script>
    const btn_1 = document.querySelector('#btn_1')
    const btn_2 = document.querySelector('#btn_2')
    const btn_3 = document.querySelector('#btn_3')

    btn_1.addEventListener('click', function(){
        if(document.getElementById('one').style.visibility === "visible"){
            document.getElementById('one').style.visibility = "hidden";
        } else {
            document.getElementById('one').style.visibility = "visible";
        }
    })
    btn_2.addEventListener('click', function(){
        if(document.getElementById('two').style.visibility === "visible"){
            document.getElementById('two').style.visibility = "hidden";
        } else {
            document.getElementById('two').style.visibility = "visible";
        }
    })
    btn_3.addEventListener('click', function(){
        if(document.getElementById('three').style.visibility === "visible"){
            document.getElementById('three').style.visibility = "hidden";
        } else {
            document.getElementById('three').style.visibility = "visible";
        }
    })
    
</script>
